# AICRM System - Environment Variables Example
# 复制此文件为 .env 并填入实际值

# ================== 应用配置 ==================
APP_NAME="AICRM System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-secret-key-change-in-production-use-openssl-rand-hex-32"

# ================== 服务器配置 ==================
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
SERVER_WORKERS=4

# ================== 数据库配置 ==================
# PostgreSQL
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="aicrm_db"
POSTGRES_USER="aicrm_user"
POSTGRES_PASSWORD="changeme"
POSTGRES_POOL_SIZE=20

# MongoDB
MONGODB_HOST="localhost"
MONGODB_PORT=27017
MONGODB_DB="aicrm_mongo"
MONGODB_USER=""
MONGODB_PASSWORD=""

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# ================== AI 服务配置 ==================
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"

# Anthropic
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-opus-20240229"

# ================== 验证码服务配置 ==================
# 2Captcha
2CAPTCHA_API_KEY="your-2captcha-api-key"

# Anti-Captcha
ANTICAPTCHA_API_KEY="your-anticaptcha-api-key"

# ================== 爬虫配置 ==================
REQUEST_TIMEOUT=30
MAX_RETRIES=3
CONCURRENT_REQUESTS=16
DOWNLOAD_DELAY=0.5

# 代理配置
PROXY_ENABLED=true
PROXY_POOL_SIZE=100
PROXY_ROTATION_INTERVAL=300

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SECOND=2
RATE_LIMIT_BURST=10

# ================== 验证码识别配置 ==================
CAPTCHA_OCR_ENABLED=true
CAPTCHA_ENGINE="tesseract"
TESSERACT_PATH="/usr/bin/tesseract"

# ================== 存储配置 ==================
DATA_DIR="./data"
LOG_DIR="./logs"

# ================== Celery 配置 ==================
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# ================== 监控配置 ==================
SENTRY_DSN=""
PROMETHEUS_ENABLED=true

# ================== 其他配置 ==================
TIMEZONE="Asia/Shanghai"
LOCALE="zh_CN.UTF-8"
